#include<iostream>
using namespace std;
void sort(int a[],int l,int h)
{
    int pivot=a[l];
    int i=l;
    int j=h+1;
        while(i<j)
        {
            do
            {
                i++;
            }while(a[i]<pivot);
            do
            {
                j--;

            }while(a[j]>pivot);
            if(i<j)
            {
                swap(a[i],a[j]);
            }
        }
        swap(a[j],a[l]);
        if(i!=j)
        {
            sort(a,1,j-1);
            sort(a,j-1,h);
        }
}


int main()
{
    int n;
    cout<<"\nEnter size";
    cin>>n;
    int a[100];
    cout<<"\nEnter elemnet";
    for(int i=0;i<n;i++)
    {
        cin>>a[i];

    }

    sort(a,0,n-1);
     cout<<"\nSorted list";
    for(int i=0;i<n;i++)
    {
        cout<<a[i]<<" ";
    }
}
